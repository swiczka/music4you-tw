@{
    ViewData["Title"] = "Logowanie";
}
@model LoginViewModel

@if (TempData["Error"] != null)
{
    <div class="mx-auto max-w-lg space-y-4 rounded p-6 text-center">
        <span class="rounded-full bg-red-200 p-2 text-red-800"><b>Błąd!</b> - @TempData["Error"]</span>
    </div>
}

<form asp-action="Login" class="mx-auto max-w-lg space-y-4 rounded p-6">
    <h3 class="left-2 text-3xl font-semibold text-gray-700">Zaloguj się do swojego konta</h3>
    <div class="mb-3">
        <label asp-for="Email" class="block text-sm font-medium text-gray-700">Adres e-mail</label>
        <input asp-for="Email" type="email" class="mt-1 block w-full rounded border-gray-300 p-1 text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Wprowadź adres e-mail">
        <span asp-validation-for="Email" class="text-sm text-red-600"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="block text-sm font-medium text-gray-700">Hasło</label>
        <input asp-for="Password" type="password" class="mt-1 block w-full rounded border-gray-300 p-1 text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Wprowadź hasło">
        <span asp-validation-for="Password" class="text-sm text-red-600"></span>
    </div>
    <div class="mt-4 text-right">
        <input type="submit" class="rounded bg-blue-600 px-6 py-2 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2" value="Zaloguj się" />
    </div>
</form>

