@{
    ViewData["Title"] = "Rejestracja";
}
@model RegisterViewModel

@if (TempData["Error"] != null)
{
    <div class="mx-auto max-w-lg space-y-4 rounded-xl bg-red-200 p-3">
        <span class="text-red-800"><b>Błąd!</b> - @TempData["Error"] </span>
    </div>
}

<form asp-action="Register" class="mx-auto max-w-lg space-y-4 rounded p-6">
    <h3 class="left-2 text-3xl font-semibold text-gray-700">Utwórz nowe konto</h3>
    <div asp-validation-summary="ModelOnly" class="rounded-full bg-red-200 p-2 text-red-800"></div>

    <div class="mb-3">
        <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Email" class="mt-1 block w-full rounded border-gray-300 p-1 text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
        <span asp-validation-for="Email" class="text-sm text-red-600"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Username" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Username" class="mt-1 block w-full rounded border-gray-300 p-1 text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
        <span asp-validation-for="Username" class="text-sm text-red-600"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Password" class="mt-1 block w-full rounded border-gray-300 p-1 text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
        <span asp-validation-for="Password" class="text-sm text-red-600"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="ConfirmPassword" class="mt-1 block w-full rounded border-gray-300 p-1 text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
        <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
    </div>

    <div class="mt-4 text-right">
        <input class="rounded bg-blue-600 px-6 py-2 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2" type="submit" value="Utwórz konto" />
    </div>
</form>
     